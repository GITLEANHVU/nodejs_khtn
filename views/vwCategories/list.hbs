<div class="card">


    <div class="card-header h4 d-flex justify-content-between">
        <span>
            Categories
        </span>
        <a href="/admin/categories/add" class="btn btn-outline-success btn-sm" role="button"
            style="display: flex; width: fit-content; align-items: center;">
            <span class="material-icons" >add</span>
            <span> Add Category</span>
        </a>
    </div>


    {{#if this.empty}}
    <div class="card-body">
        <div class="card-text">Không có dữ liệu</div>
    </div>
    {{else}}

    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Category</th>
                    <th scope="col">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                {{#each this.categories}}
                <tr>
                    <th scope="row">{{CatID}}</th>
                    <td>{{CatName}}</td>
                    <td class="text-center">
                        <a href="/admin/categories/edit?id={{CatID}}" class="btn btn-primary btn-sm" role="button">
                            <span class="material-icons" style="font-size: 1.2rem;">edit</span>
                        </a>
                        <a href="#" class="btn btn-danger btn-sm" role="button">
                            <span class="material-icons" style="font-size: 1.2rem;">delete</span>
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    {{/if}}



    <div class="card-footer text-muted">
        Footer
    </div>
</div>